.container
  .row
    .col.s12
    -if current_user.role == 'client'
      .card.center-panel
        .card-content.new_project

          = form_for @project do |f|
            = f.label :name
            = f.text_field :name
            = f.label :description
            = f.text_area :description

            = f.submit "Create Project"
