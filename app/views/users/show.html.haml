.container
  .row
    .col.s6
      %h5.left-align
        Profile
    .col.s6.right-align
      %h5= link_to "Edit Profile", edit_user_path(current_user), id: "edit_profile"
  .row
    .col.s12
      .card-panel.center-panel
        %ul
          %li
            %img.circle.responsive-img
              =image_tag current_user.image, { class: "circle", alt: "Picture of User" }
          %li
            %span
              First Name
              = current_user.first_name
          %li
            %span
              Last Name
              = current_user.last_name
          %li
            %span
              Email
              = current_user.email
          %li
            %span
              Company Name
              = current_user.company_name
          %li
            %span
              Current Role
              = current_user.role

  -if current_user.role == 'developer'
    .row
      .col.m12
        %span#experience
          Experience
          = current_user.experience
        %br
    .row
      .col.s12
        %ul.collection.with-header
          %li.collection-header
            .row
              .col.s6
                %h5.left-align
                  Specialties
              .col.s6.right-align
                %h5.ui-widget
                  %label{:for => "tags"} Tags:
                  %input#tags
            -current_user.specialties.each do |specialty|
              %li.collection-item
                .row
                  .col.s6
                    = specialty.specialty_name
                  .col.s6.right-align
                    = button_to "Delete", specialty_path, method: :delete

